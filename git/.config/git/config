# Git Configuration
# Location: ~/.config/git/config

# Pull behavior
[pull]
	rebase = true        # Rebase instead of merge when pulling (keeps history clean)

# Repository defaults
[init]
	defaultBranch = main  # Use 'main' as default branch name

# User identity
[user]
	name = Mike Navales
	email = mike@mikenavales.xyz

# GitHub credential management using GitHub CLI
[credential "https://github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
