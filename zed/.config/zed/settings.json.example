// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
//
// IMPORTANT: This is a template file. Copy this to settings.json and fill in your API keys.
// The actual settings.json file is gitignored to prevent committing sensitive information.
{
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "context7_api_key": "YOUR_API_KEY_HERE"
      }
    }
  },
  "terminal": {
    "dock": "right",
    "shell": {
      "program": "bash"
    }
  },
  "icon_theme": "Zed (Default)",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "dark",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "soft_wrap": "editor_width",

  // Added configurations for your web dev stack
  "formatter": "prettier",
  "format_on_save": "on",
  "tab_size": 2,
  "hard_tabs": false,

  "languages": {
    "TypeScript": {
      "formatter": [
        {
          "code_action": "source.organizeImports"
        },
        {
          "code_action": "source.fixAll"
        },
        "prettier"
      ],
      "tab_size": 2
    },
    "JavaScript": {
      "formatter": "prettier",
      "tab_size": 2
    },
    "Svelte": {
      "formatter": "prettier",
      "tab_size": 2
    },
    "Astro": {
      "formatter": "prettier",
      "tab_size": 2
    },
    "JSON": {
      "formatter": "prettier",
      "tab_size": 2
    },
    "CSS": {
      "formatter": "prettier",
      "tab_size": 2
    }
  },

  "lsp": {
    "typescript-language-server": {
      "settings": {
        "typescript": {
          "preferences": {
            "importModuleSpecifier": "relative",
            "includePackageJsonAutoImports": "auto"
          },
          "suggest": {
            "autoImports": true
          }
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "tailwindCSS": {
          "experimental": {
            "classRegex": [
              "class:\\s*?[\"'`]([^\"'`]*).*?[\"'`]",
              "class\\s*=\\s*[\"'`]([^\"'`]*).*?[\"'`]",
              "className:\\s*?[\"'`]([^\"'`]*).*?[\"'`]",
              "className\\s*=\\s*[\"'`]([^\"'`]*).*?[\"'`]"
            ]
          }
        }
      }
    }
  },

  "file_types": {
    "Astro": ["astro"],
    "Svelte": ["svelte"],
    "TypeScript": ["ts", "tsx"],
    "JavaScript": ["js", "jsx", "mjs"]
  },

  "auto_install_extensions": {
    "astro": true,
    "svelte": true,
    "typescript": true,
    "tailwindcss": true
  },

  "auto_update": true
}
